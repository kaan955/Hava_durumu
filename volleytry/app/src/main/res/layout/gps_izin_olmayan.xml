<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:background="@color/colorPrimary"
                                             android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/my_border"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/contraintOf">

        <TextView
                android:text="Merhaba, \n Böyle bir sorun ile karşılaştığın için üzgünüz."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="30dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.19" android:textColor="@color/cardview_light_background"
                android:textSize="16sp"/>
        <TextView
                android:text="Aşağıda seçeneklerle devam edebilirsin;"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                android:textColor="@color/cardview_light_background" android:textSize="16sp"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@+id/textView13"
                app:layout_constraintStart_toStartOf="@+id/textView13"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2" app:layout_constraintStart_toEndOf="@+id/button"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp" android:text="Konum Bilgisini Kendin Gir"
                android:layout_marginBottom="36dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/textView14"/>
        <Button
                android:text="izin Ver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                android:layout_marginEnd="20dp" android:layout_marginRight="20dp"
                app:layout_constraintTop_toTopOf="@+id/button2"
                app:layout_constraintBottom_toBottomOf="@+id/button2"
                app:layout_constraintStart_toStartOf="@+id/textView14"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>