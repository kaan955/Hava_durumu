<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:background="@color/colorPrimary"
                                             android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/my_border">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_dialog_info"
                android:id="@+id/imageView3"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.100000024"/>
        <TextView
                android:text="Şehir veya İlçenizi Giriniz:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:textColor="@color/cardview_light_background" android:textSize="18sp"
                android:textColorHint="@color/cardview_light_background"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/textView16"/>
        <TextView
                android:text="Yakında GoogleMap ile konum seçebileceksiniz."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                android:layout_marginLeft="3dp" android:layout_marginStart="3dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="@+id/imageView3"
                android:textColor="@color/cardview_light_background"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/myEditText"
                app:layout_constraintStart_toStartOf="@+id/textView15" android:layout_marginTop="3dp"
                app:layout_constraintTop_toBottomOf="@+id/textView15"
                android:textColor="@color/cardview_light_background"
                android:textColorHint="@color/cardview_light_background"
                android:inputType="text" android:hint="Buraya giriniz.."
                android:singleLine="true" android:textSize="16sp"/>
        <Button
                android:text="ARA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button3" app:layout_constraintStart_toEndOf="@+id/textView15"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/myEditText" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="15dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="10dp" android:layout_marginRight="10dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@android:drawable/stat_sys_warning"
                android:id="@+id/imageView5" app:layout_constraintStart_toEndOf="@+id/myEditText"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/myEditText"
                app:layout_constraintTop_toTopOf="@+id/myEditText" android:visibility="gone"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>